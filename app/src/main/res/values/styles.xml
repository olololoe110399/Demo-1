<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color</item>
        <item name="colorPrimaryDark">@color/color</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!-- ToolBar -->
    <style name="ToolBarStyle" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
    </style>
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slideleft</item>
        <item name="android:windowExitAnimation">@anim/slideright</item>
    </style>
    <style name="DialogAnimation_2">
        <item name="android:windowEnterAnimation">@anim/slideup</item>
        <item name="android:windowExitAnimation">@anim/slidedown</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

</resources>
